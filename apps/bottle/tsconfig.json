{
  "extends": "@bottlesteam/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vitest/globals"]
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/css.ts",
    "**/css.js",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "vitest.config.mjs"
  ],
  "exclude": ["node_modules"]
}
